<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", locations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_location_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", location_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.location.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @location.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.location.info", :default => t("activerecord.labels.info", :default => "Info")) %>:</b>
          <%= @location.info %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.location.building_id", :default => t("activerecord.labels.building_id", :default => "Building")) %>:</b>
          <%= link_to @location.building.name, @location.building unless @location.building.blank? %>
        </p>
		<p>
			<strong>Items in this location:</strong>
			<ul>
				<% @location.items.each do |i| %>
					<li class="model_item"><%= link_to i.info, i %></li>
				<% end %>
			</ul>
		</p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_location_path(@location), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", location_path(@location), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>