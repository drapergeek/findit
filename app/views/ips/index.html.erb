<h1>IPs</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @ips.each do |ip| %>
      <tr>
        <td><%= ip.number %></td>
        <td>
          <%= link_to 'Edit', edit_ip_path(ip), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy',
                      ip_path(ip),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_ip_path, :class => 'btn btn-primary' %>
