<h1>Buildings</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td>
          <%= link_to 'Edit', edit_building_path(building), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy',
                      building_path(building),
                      :method => :delete,
                      :confirm => 'Are you sure?',
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New', new_building_path, :class => 'btn btn-primary' %>
