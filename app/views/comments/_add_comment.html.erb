<%= semantic_form_for @comment do |f| %>
	<%= f.inputs :name => "Add Comment" do %>
      <%= f.input :subject %>
	  <%= f.input :body %>
		<%= f.input :user_id, :as => :hidden %>
		<%= f.input :ticket_id, :as => :hidden %>
    <% end %>

<%= f.buttons do %>
	<%= f.commit_button %>
<%end%>
<% end %>