<%= render "shared/error_messages", :target=>@comment %> 
<%= semantic_form_for @comment do |f| %>
	<%= f.inputs :name => "Basic" do %>
      <%= f.input :subject %>
	  <%= f.input :body %>
		  <%= f.input :reply %>
	<%= f.input :user %>
	<%= f.input :ticket %>
    <% end %>

<%= f.buttons do %>
	<%= f.commit_button %>
<%end%>
<% end %>