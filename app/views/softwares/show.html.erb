<%- model_class = @software.class -%>
<h1><%= @software.name %></h1>

<ul class="unstyled">
  <li><strong>License Key</strong> <%= @software.license_key %></li>
  <li><strong>OS</strong> <%= @software.operating_system_name %></li>
  <li><strong>Storage Location</strong> <%= @software.storage_location %></li>
</ul>

<h3>Info</h3>
<p><%= @software.info %></p>

<% if @software.installations.any? %>
  <ul>
    <%= @software.installations.each do |install| %>
      <li><%= install.item_name %></li>
    <% end %>
  </ul>

<% else %>
  <p>This software is not installed anywhere.</p>

<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              softwares_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_software_path(@software), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              software_path(@software),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
