<% title "Areas" %>
<%= render "admin/top_admin" %>

<h3>Areas</h3>
<table class="table">
  <tr>
    <th>Name</th>
	<th>Keywords</th>
  </tr>
  <% for area in @areas %>
    <tr>
      <td><%= area.name %></td>
	  <td><%= area.keywords %></td>
      <td><%= link_to "Show", area %></td>
      <td><%= link_to "Edit", edit_area_path(area) %></td>
      <td><%= link_to "Destroy", area, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Area", new_area_path %></p>
<%= render "admin/bottom_admin" %>
