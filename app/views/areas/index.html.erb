<h1>Areas</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Keywords</th>
    </tr>
  </thead>
  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></ td>
        <td><%= area.keywords %></td>
        <td>
          <%= link_to 'Edit', edit_area_path(area), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy',
                      area_path(area),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_area_path,
            :class => 'btn btn-primary' %>
