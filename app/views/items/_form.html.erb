<%= simple_form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :make %>
  <%= f.input :model %>
  <%= f.input :processor %>
  <%= f.input :processor_rating %>
  <%= f.input :ram %>
  <%= f.input :hard_drive %>
  <%= f.input :serial %>
  <%= f.input :vt_tag %>
  <%= f.input :os, :collection=>OperatingSystem.all, :label => "OS" %>
  <%= f.input :type_of_item, :collection => Item::ITEM_TYPES %>
  <%= f.association :location %>
  <%= f.association :user %>
  <%= f.input :info %>
  <%= f.input :in_use %>
  <%= f.input :critical %>
  <%= f.input :purchased_at, :as => :string, :input_html => { :class => 'datepicker' } %>
  <%= f.input :warranty_expires_at, :as => :string , :input_html => { :class => 'datepicker' } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn' %>
  </div>
<% end %>
