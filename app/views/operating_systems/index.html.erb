<h1>Operating Systems</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @operating_systems.each do |operating_system| %>
      <tr>
        <td><%= operating_system.name %></td>
        <td>
          <%= link_to 'Edit', edit_operating_system_path(operating_system), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy',
                      operating_system_path(operating_system),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_operating_system_path, :class => 'btn btn-primary' %>
