<% title "Tickets by Area" %>	
<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
		<%= render :partial=>"navigation" %>
    </ul>
  </div>          
  <div class="content">          
    <div class="inner">
	<% @tickets_by_area.each do |area, tickets| %>
		<%= "<a name=\"#{area}\"></a>".html_safe %>
		<h1><%= area unless area.nil? %>
		<%= "Uncategorized" if area.nil? %></h1>
		<%= render :partial=>"tickets", :locals => { :tickets => tickets }  %>
	<% end %>
<p><%= link_to "New Ticket", new_ticket_path %></p>
</div>
</div>
</div>
<% content_for :sidebar, render(:partial=>'tickets/sidebar') %>