<%= render "/shared/error_messages", :target=>@ticket %>
<%= semantic_form_for @ticket do |f| %>
<%= f.inputs :name => "Required" do %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :status, :as => :select, :include_blank => false, :collection => ["New", "Open", "Stalled", "Resolved"]%>
<%= f.input :submitter %>
<% end %>
<%= f.inputs do %>
<%= f.input :worker, :label => "Issued to:", :as => :select, :include_blank => true, :collection => User.workers %>
<%= f.input :priority, :as => :select, :include_blank => true, :collection => 1..10%>
<% end %>
<%= f.inputs :name => "Statistics" do %>
<%= f.input :project %>
<%= f.input :area %>
<% end %>
<%= f.inputs :name => "Dates" do %>
<%= f.input :start_date %>
<%= f.input :due_date %>
<% end %>



<%= f.buttons do %>
<%= f.commit_button %>
<%end%>
<% end %>
