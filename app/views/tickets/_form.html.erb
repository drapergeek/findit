<%= render "shared/error_messages", :target=>@ticket %>
 <%= semantic_form_for @ticket do |f| %>
	<%= f.inputs :name => "Basic" do %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :status %>
	  <%= f.input :project %>
	  <%= f.input :worker %>
	  <%= f.input :submitter %>
	  <%= f.input :area %>
	  <%= f.input :priority%>
	  <%= f.input :start_date %>
	  <%= f.input :due_date %>
    <% end %>

 

<%= f.buttons do %>
	<%= f.commit_button %>
<%end%>
<% end %>
